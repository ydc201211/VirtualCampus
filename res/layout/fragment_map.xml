<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/fragment_map"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       
        android:clickable="true" />
      <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:background="@drawable/login_frame"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:orientation="horizontal" >
		
         <ImageView
             android:layout_marginLeft="8dp"
             	android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:background="@drawable/suosou"
	            android:layout_gravity="center_vertical"/>
         <LinearLayout
	        android:layout_width="1dp"
	        android:background="#F2F2F2"
	        android:layout_height="40dp"
	        android:layout_margin="8dp"
	        android:orientation="horizontal"/>
	        <EditText
	            android:id="@+id/search_edit"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="10dp"
	            android:hint="搜地点、找路线"
	            android:background="@null"
	            android:layout_weight="3"/>
	         <LinearLayout
	        android:layout_width="1dp"
	        android:background="#F2F2F2"
	        android:layout_height="40dp"
	        android:layout_margin="6dp"
	        android:orientation="horizontal"/>
	        <ImageView
	            android:id="@+id/image_saoyisao"
	            android:layout_width="30dp"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_vertical"
	            android:layout_margin="5dp"
	            android:src="@drawable/saoyisao"
	            android:layout_weight="1"
	            android:gravity="center"/>
    </LinearLayout>

      <LinearLayout 
          android:layout_width="30dp"
          android:layout_height="75dp"
          android:orientation="vertical"
          android:layout_gravity="bottom"
          android:layout_marginLeft="20dp"
          android:layout_marginBottom="125dp"
          android:background="@color/white"
          android:gravity="center">
          <ImageView
	        android:id="@+id/image_zoom_add"
	        android:src="@drawable/add"
	        android:layout_width="20dp"
	        android:layout_height="30dp"
	        android:layout_marginTop="5dp"
	        android:background="#00000000"
	        android:gravity="center"/>
          <TextView 
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="3dp"
              android:layout_marginBottom="3dp"
              android:layout_marginRight="5dp"
              android:background="@color/gray"
              />
          <ImageView
	        android:id="@+id/image_zoom_lose"
	        android:src="@drawable/dec"
	        android:layout_width="20dp"
	        android:layout_height="30dp"
	        android:background="#00000000"
	        android:gravity="center"/>
      </LinearLayout>
      
      <ImageView
        android:id="@+id/image_backlocation"
        android:src="@drawable/location"
        android:layout_width="30dp"
        android:layout_height="30dp"
		android:layout_gravity="bottom|left"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:background="@color/white"
        android:gravity="center"/>
      
    <ImageView
        android:id="@+id/button1"
        android:src="@drawable/route"
        android:layout_width="50dp"
        android:layout_height="50dp"
		android:layout_gravity="bottom|right"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="25dp"
        android:background="#00000000"
        android:gravity="center"/>

</FrameLayout>