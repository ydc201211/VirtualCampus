<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:background="@color/white">
    <view.ImageView_Circle
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_l_avatar" 
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher"/>
 
    <RelativeLayout
        android:id="@+id/rl_l_content"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_l_subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:text="超超超人" />
		<TextView
            android:id="@+id/tv_l_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mid_gray"
            android:layout_below="@id/tv_l_subhead"
            android:textSize="10dp"
            android:text="4-27 12:22" />
    </RelativeLayout>
    

</LinearLayout>
